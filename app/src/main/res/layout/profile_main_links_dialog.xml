<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    git p

    <Button
        android:id="@+id/profile_dialog_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/grey_outline"
        android:text="Instagram"
        android:textColor="@color/color_NUS"
        app:layout_constraintBaseline_toBaselineOf="@+id/profile_dialog_github"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profile_dialog_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/grey_outline"
        android:text="GitHub"
        android:textColor="@color/color_NUS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile_dialog_linkedin"
        app:layout_constraintStart_toEndOf="@+id/profile_dialog_instagram"
        app:layout_constraintTop_toBottomOf="@+id/scrollView5" />

    <Button
        android:id="@+id/profile_dialog_linkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/grey_outline"
        android:text="Linkedin"
        android:textColor="@color/color_NUS"
        app:layout_constraintBaseline_toBaselineOf="@+id/profile_dialog_github"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Biography"
        android:textColor="@color/color_NUS"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bio_title">

        <TextView
            android:id="@+id/text_bio_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio Text"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>